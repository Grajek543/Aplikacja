<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aplikacja.strony.zakladki.zakladka3"
             
             Title="">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightGray" Offset="0.0" />
            <GradientStop Color="Gray" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout Padding="10" >
            <Label Text="Settings" HorizontalOptions="Center" FontFamily="Tiny5" FontSize="24" Padding="20" />


            <Button BackgroundColor="RosyBrown" Text="Select Language" Clicked="OnSelectLanguageButtonClicked" />

            <CollectionView x:Name="LanguageListView" IsVisible="False" SelectionMode="Single" SelectionChanged="OnLanguageSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" Padding="10" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>