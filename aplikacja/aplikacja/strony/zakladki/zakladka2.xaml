<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aplikacja.strony.zakladki.zakladka2"
             Title="">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightGray" Offset="0.0" />
            <GradientStop Color="Gray" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Buy parts!" HorizontalOptions="Center" FontFamily="Tiny5" FontSize="24" Padding="20" />
            <SearchBar Placeholder="Search Parts" TextChanged="SearchBar_TextChanged"/>
            <CollectionView x:Name="shoplist">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" BackgroundColor="RosyBrown">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" TextColor="White"/>
                                <Label Text="{Binding Type}" TextColor="LightGray"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>